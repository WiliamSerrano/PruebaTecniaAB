<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PruebaTecniaAB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/customlayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PruebaTecniaAB.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="content">
        <header>
            <div class="navbar">
                @if (User.Identity.IsAuthenticated)
                {
                    <h4>@User.Identity.Name</h4>
                }
                <div class="nav-items">
                    <ul>
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("Administrador"))
                        {
                            <li>
                                <a asp-area="" asp-controller="User" asp-action="Index">User</a>
                            </li>
                        
                        }
                        @if (User.IsInRole("Administrador") || User.IsInRole("Seller"))
                        {

                            <li>
                                <a asp-area="" asp-controller="Sale" asp-action="Index">Sale</a>
                            </li>
                        
                        }
                         @if (User.IsInRole("Administrador") || User.IsInRole("Accountant"))
                        {

                            <li>
                                <a asp-area="" asp-controller="Account" asp-action="Index">Accounting</a>
                            </li>
                        
                        }
                        @if (User.IsInRole("Administrador"))
                        {
                            <li>
                                <a asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                            </li>

                        }
                    </ul>
                </div>
                <div class="nav-button">
                    <div class="anim-layer"></div>
                    <a asp-area="" asp-controller="Login" asp-action="Index">Sign out</a>
                </div>
                <div id="hamburger-menu">&#9776;</div>
            </div>

            <div id="mobile-menu">
                <div class="mobile-nav-items">
                    <ul>
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("Administrador"))
                        {
                            <li>
                                <a asp-area="" asp-controller="User" asp-action="Index">User</a>
                            </li>

                        }
                        @if (User.IsInRole("Administrador") || User.IsInRole("Seller"))
                        {

                            <li>
                                <a asp-area="" asp-controller="Sale" asp-action="Index">Sale</a>
                            </li>

                        }
                        @if (User.IsInRole("Administrador") || User.IsInRole("Accountant"))
                        {

                            <li>
                                <a asp-area="" asp-controller="Account" asp-action="Index">Accounting</a>
                            </li>

                        }
                        @if (User.IsInRole("Administrador"))
                        {
                            <li>
                                <a asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                            </li>

                        }
                    </ul>
                </div>
                <div class="mobile-nav-button">
                    <div class="anim-layer"></div>
                    <a asp-area="" asp-controller="Login" asp-action="Index">Sign out</a>
                </div>
                <div id="hamburger-cross">&#10006;</div>
            </div>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; William Serrano - PruebaTecnicaWebMaster - 2024 <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
       
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/customlayout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model List<User>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Usuarios</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="User_Detail" asp-controller="User" asp-route-idUser="0">Create New</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Mail</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(f => item.FirstName )</td>
                        <td>@Html.DisplayFor(l => item.LastName)</td>
                        <td>@Html.DisplayFor(m => item.Mail)</td>
                        <td>@Html.DisplayFor(r => item.Role)</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="User_Detail" asp-controller="User" asp-route-idUser="@item.IdUser">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="User" asp-route-idUser="@item.IdUser">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
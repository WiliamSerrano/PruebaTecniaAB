@model List<Sale>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Accounting</h3>
<div class="container mt-5">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="tab1-tab" data-bs-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">Pending Sales</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="tab2-tab" data-bs-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">Paid Sales</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>Client</th>
                        <th>Description</th>
                        <th>Creation Date</th>
                        <th>Total Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        if (item.IsPaid == false)
                        {
                            <tr>
                                <td>@Html.DisplayFor(c => item.NameClient)</td>
                                <td>@Html.DisplayFor(c => item.Description)</td>
                                <td>@Html.DisplayFor(c => item.CreationDate)</td>
                                <td>@Html.DisplayFor(c => item.TotalPrice) $</td>
                                <td>
                                    <a class="btn btn-success btn-sm" asp-action="UpdateSale" asp-controller="Account" asp-route-idSale="@item.IdSale">Pay</a>
                                </td>
      
                            </tr>

                        }

                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>Client</th>
                        <th>Description</th>
                        <th>Creation Date</th>
                        <th>Paid Date</th>
                        <th>Total Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                        @foreach (var item in Model)
                        {

                            if (item.IsPaid == true)
                            {
                            <tr>
                                <td>@Html.DisplayFor(c => item.NameClient)</td>
                                <td>@Html.DisplayFor(c => item.Description)</td>
                                <td>@Html.DisplayFor(c => item.CreationDate)</td>
                                <td>@Html.DisplayFor(c => item.PaidDate)</td>
                                <td>@Html.DisplayFor(c => item.TotalPrice) $</td>
                                <td> <a class="btn btn-info btn-sm" asp-action="ShowDetailSale" asp-controller="Account" asp-route-idSale="@item.IdSale">Detail</a></td>
                            </tr>

                            }

                        }

                   
                </tbody>
            </table>
        </div>
    </div>
</div>

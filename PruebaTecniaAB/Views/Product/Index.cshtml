@model List<Product>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Products</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Product_Detail" asp-controller="Product" asp-route-idProduct="0"><i class="bi bi-plus-square"></i></a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(p => item.ProductName)</td>
                        <td>@Html.DisplayFor(u => item.UnitPrice) $</td>
                        <td>@Html.DisplayFor(q => item.Quantity)</td>
                        <td>@Html.DisplayFor(a => item.Active)</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Product_Detail" asp-controller="Product" asp-route-idProduct="@item.IdProduct"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Product" asp-route-idProduct="@item.IdProduct"><i class="bi bi-trash3-fill"></i></a>
                        </td> 
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


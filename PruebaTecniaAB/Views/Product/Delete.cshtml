@model PruebaTecniaAB.Models.Product;
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header"><h1 class="text">Delete Product</h1></div>
    <div class="card_body cardProduct">
        <form asp-action="Delete" asp-controller="Product" method="post">

            <input type="hidden" asp-for="IdProduct" />

            <div class="mb-2">

                <label class="form-label" asp-for="ProductName">Name</label>
                <input class="form-control form-control-sm" asp-for="ProductName" type="text" disabled />

            </div>

            <div class="mb-2">

                <label class="form-label" asp-for="UnitPrice">Unit Price</label>
                <input class="form-control form-control-sm" asp-for="UnitPrice" type="number" step="0.01" disabled />

            </div>

            <div class="mb-2">

                <label class="form-label" asp-for="Quantity">Quantity</label>
                <input class="form-control form-control-sm" asp-for="Quantity" type="number" disabled />

            </div>

            <div class="mb-2">

                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Product">Cancel</a>

            </div>

        </form>
    </div>
</div>

@model PruebaTecniaAB.Models.Product;
@{
    ViewData["Title"] = "Product_Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        @if (Model.IdProduct == 0)
        {

            <h1>Create New Product</h1>

        }
        else
        {

            <h1>Update Product Information</h1>

        }
    </div>
    <div class="card-body">
        <form asp-action="Product_Detail" asp-controller="Product" method="post">

            <input type="hidden" asp-for="IdProduct" />

            <div class="mb-2">

                <label class="form-label" asp-for="ProductName">Name</label>
                <input class="form-control form-control-sm" asp-for="ProductName" type="text" />
                <span asp-validation-for="ProductName" class="text-danger"></span>

            </div>

            <div class="mb-2">

                <label class="form-label" asp-for="UnitPrice">Unit Price</label>
                <input class="form-control form-control-sm" asp-for="UnitPrice" type="number" step="0.01" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>

            </div>

            <div class="mb-2">

                <label class="form-label" asp-for="Quantity">Quantity</label>
                <input class="form-control form-control-sm" asp-for="Quantity" type="number" />
                <span asp-validation-for="Quantity" class="text-danger"></span>

            </div>

            <div class="mb-2">

                <label class="form-label" asp-for="Active">Active</label>
                <input type="checkbox" class="form-check-input" asp-for="Active" />

            </div>

            <div class="mb-2">

                @if (Model.IdProduct == 0)
                {

                    <button class="btn btn-success btn-sm" type="submit">Create</button>

                }
                else
                {

                    <button class="btn btn-primary btn-sm" type="submit">Update</button>

                }

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Product">Cancel</a>

            </div>

        </form>
    </div>
</div>